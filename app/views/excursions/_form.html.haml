= form_for @excursion do |f|
  = error_messages_for @excursion
  .row
    .col-md-6
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'
        = f.error_messages_for(:name)
    .col-md-6
      .form-group
        = f.label :describe
        = f.text_area :describe, class: 'form-control', rows: 1
        = f.error_messages_for(:describe)
  .row
    .col-md-6
      .form-group
        = f.label :price
        .input-group
          = f.text_field :price, class: 'form-control'
          %span.input-group-addon
            %span.glyphicon.glyphicon-ruble
        = f.error_messages_for(:price)

  
  %fieldset
    %legend Поле для города
    %button.btn.btn-info#city-change-exist-btn Создать/Редактировать
    %div.left#city-change{"data-content-new": "#{new_city_form(f)}",
      "data-content-exist": "#{render 'exist_city', f: f}"}
      = f.fields_for(:city) do |fr|
        = fr.hidden_field(:id)
        = render('excursions/one_city_form', fr: fr)  

  .actions.margin-small-top
    = f.submit nil, class: 'btn btn-primary'
